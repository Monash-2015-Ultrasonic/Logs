	line2[2] = ((threshold)%10) 			+ 0x30;


	if(R<0) {}
	else {
		int Rout = R*100;
		/* Print results */
		/*
		line1[7]			= (((Rout)/10000)%10)		+ 0x30;
		line1[8] 			= (((Rout)/1000)%10)		+ 0x30;
		line1[9] 			= (((Rout)/100)%10) 		+ 0x30;
